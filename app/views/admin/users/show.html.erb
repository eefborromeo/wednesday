<%= link_to 'Home', admin_users_path %>
<br>
<div> <%= @trader.email %> </div>
<div> <%= @trader.money %> </div>
<div> <%= @trader.approved_status %> </div>
<%= form_with model: [:admin, @trader] do |form| %>
  <div>
    <%= form.check_box :approved, onchange: "this.form.submit();" %>
    <% if @trader.approved? %>
      <span> This trader is approved. </span>
    <% else %>
      <span> Approve this trader? </span>
    <% end %>
  </div>
<% end %>
