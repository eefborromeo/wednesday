<h1>Index</h1>
<%= link_to 'Home', root_path %>
<%= link_to 'Transaction history', transaction_index_path %>
<div> Current Balance </div>
<%= current_user.money %>
<br>
<br>
<% @assets.each do |asset| %>
    <div>
        <h2><%= link_to asset.asset_name, asset_path(asset.asset_name) %></h2>
        <%= asset.total_shares %>
        <br>
        <%= link_to "Buy Asset", new_transaction_path(asset.asset_name) %>
        <% if asset.total_shares > 0 %>
            <%= link_to "Sell Asset", new_sell_path(asset.asset_name) %>
        <% end %>
    </div>
<% end %>