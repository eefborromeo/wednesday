<h1>User#edit</h1>
<p>Find me in app/views/user/edit.html.erb</p>

<%= link_to 'Home', root_path %>

<%= form_with model: @user do |form| %>
  <div>
    <%= form.label "Email" %>
    <br>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label "Password" %>
    <br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Update user info" %>
  </div>
<% end %>

<%= link_to 'Delete account', user_registration_path, method: :delete, data: {confirm: 'WARNING! Continue to destroy your account? This will delete all your information.'} %>